# just --list
default:
    @just --list --unsorted

# sound controls
sound:
    myxer

# bluetooth management
bluetooth:
    bzmenu --launcher walker

# wifi management
wifi:
    nmtui

bigcount TIME:
    #!/usr/bin/env sh
    stdbuf -oL termdown {{TIME}} | while IFS= read -r line; do \
        echo "$line" | figlet | lolcat; \
    done 
