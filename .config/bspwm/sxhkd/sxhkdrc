    rofi -show run

#screenshot
Print
    flameshot gui
#}}}

#Utility {{{
#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

#conky-rotate
ctrl + alt + Next
     conky-rotate -n

#conky-rotate
ctrl + alt + Prior
    conky-rotate -p
#}}}

#Multi media {{{
#Raises volume
XF86AudioRaiseVolume
    ~/git/scripts/volume/vol_up.sh

#Lowers volume
XF86AudioLowerVolume
    ~/git/scripts/volume/vol_down.sh

#Mute
XF86AudioMute
    ~/git/scripts/volume/mute.sh

#Playerctl works for Pragha, Spotify and others
#Delete the line for playerctl if you want to use mpc
#and replace it with the corresponding code
#mpc works for e.g.ncmpcpp
#mpc toggle
#mpc next
#mpc prev
#mpc stop

#PLAY
XF86AudioPlay
    ~/git/scripts/volume/play_pause.sh

#Next
XF86AudioNext
    playerctl next

#previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

#Brightness up
XF86MonBrightnessUp
    xbacklight -inc 10

#Brightness down
XF86MonBrightnessDown
    xbacklight -dec 10
#}}}

#################################################################
#################################################################
#####################   WM SPECIFIC    ##########################
#################################################################
#################################################################

# Utility {{{
ctrl + alt + o
    ~/.config/bspwm/scripts/picom-toggle.sh

#kill
super + q
	bspc node -c

#Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc
#}}}
    
# Basic movement and swapping {{{
# Focus/swap windows by direction
super + {_,alt + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

# Preselect the splitting area for next window on leaf/parent
super + ctrl + {h,j,k,l}
	bspc node --presel-dir \~{west,south,north,east}

# Define splitting ratio for next window on leaf/parent
#super + ctrl + {_,shift +}{1-9}
#	bspc node {_,@/} --presel-ratio 0.{1-9}

# Cancel preselection
super + ctrl + space
	bspc node --presel-dir cancel
#}}}

# Sizing of windows {{{
# Expand tiled space
super + {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + e
    bspc query -N -d | xargs -I % bspc node % -B
#}}}

# Misc {{{
# Increase/decrease window gap on focused desktop
super + bracket{left,right}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# Flip layout vertically/horizontally
super + {_,shift + }a
	bspc desktop -f '^{1-9,10}'

# Focus parent/brother/first/second for preselection
super + ctrl + {e,r,t,y}
	bspc node --focus @{parent,brother,first,second}

# switch between master and stack layout and manual tiling
super + c
    bsp-layout cycle --layouts tall,tiled
#}}}

# Window state {{{
#Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

#Toggle pseudo tiling of window
super + p
	bspc node --state \~pseudo_tiled

#Set the window state
super + shift + space
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#Move floating window
super + shift + {_,alt + }{Left,Down,Up,Right}
    ~/.config/bspwm/scripts/move-window {_,edge-}{west,south,north,east}
#}}}

# Desktop hotkeys {{{
# Rotate desktop
alt + space
	bspc node @/ --rotate {90,-90}

# Focus selected desktop FOR QWERTY KEYBOARDS
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Send focused node no another desktop
super + alt + {1-9,0}
    bspc node -d '^{1-9,10}'

#switch between master stack and default layout
super + u
    ~/git/scripts/tile_stack.sh

#}}}

# Monitor hotkeys {{{
# Move focus to other monitor
super + BackSpace
		bspc monitor -f next

# Move focused window to other monitor
super + alt + Left
	bspc node -m next --follow

# Move focused window to other monitor
super + alt + Right
		bspc node -m next --follow

# Move focused window to other monitor
super + alt + Up
	bspc node -m next --follow

# Move focused window to other monitor
super + alt + Down
	bspc node -m next --follow
#}}}
