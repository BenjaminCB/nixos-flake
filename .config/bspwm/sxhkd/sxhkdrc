#execute with bash instead of fish since ^ is incompatilbe with fish
set -U SXHKD_SHELL /usr/bin/bash

#Program hotkeys {{{
#Firefox
super + F1
	brave

#Qutebrowser
super + F2
    qutebrowser

#Thunderbird
super + F3
    kitty neomutt

@Discord
super + F4
    discord

#Spotify
super + F5
    kitty ncspot

#maple
super + F6
    ~/git/scripts/maple_work.sh

#maple
super + F7
    teams

#steam
